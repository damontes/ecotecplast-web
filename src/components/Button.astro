---
const { as, active, ...rest } = Astro.props

const Component = as ?? 'button'
---

<Component
  class:list={[
    'block w-full rounded-md  px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm  focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600',
    {
      'bg-primary-600 hover:bg-primary-500': !active,
      'bg-primary-800 hover:bg-primary-600': active
    }
  ]}
  {...rest}
>
  <slot />
</Component>
