---
import { Image } from 'astro:assets'
import headerBackground from '@/images/header-background.jpg'
---

<header
  class='relative flex items-center justify-center sm:min-h-[650px] w-full mt-20'
>
  <Image
    src={headerBackground}
    alt='Header Background'
    class='absolute inset-0 object-cover w-full h-full'
  />
  <div class='absolute inset-0 z-10 bg-black/70'></div>
  <div class='relative flex-1 max-w-7xl m-auto mx-4 sm:mx-8'>
    <div class='relative z-30 sm:space-y-4 py-12 sm:pt-0 sm:h-96 uppercase'>
      <h1
        class='relative text-primary-500 text-4xl sm:text-7xl font-black text-custom outlined-text-1'
      >
        maximizando
      </h1>
      <p class='text-white text-2xl sm:text-6xl uppercase font-light ml-10'>
        el efecto de los aditivos <br /> 100% activos en
      </p>
      <h1
        class='relative text-primary-500 text-4xl sm:text-7xl uppercase font-black ml-20 outlined-text-2'
      >
        los plasticos
      </h1>
    </div>
  </div>
</header>
<style>
  .outlined-text-1::before {
    content: 'Maximizando';
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: #74bc1f;
    color: transparent;
    position: absolute;
    left: -5px;
    top: -2px;
    @media (min-width: 640px) {
      left: -10px;
      top: -5px;
    }
  }
  .outlined-text-2::before {
    content: 'los plasticos';
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: #74bc1f;
    color: transparent;
    position: absolute;
    left: 5px;
    top: -2px;
  }
</style>
