---
const { title, description } = Astro.props;
---

<div class='relative pl-16'>
  <dt class='text-base font-semibold leading-7 text-secondary-900'>
    <div
      class='absolute left-0 top-0 flex h-10 w-10 items-center justify-center rounded-lg bg-primary-600'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        width='24'
        height='24'
        viewBox='0 0 24 24'
        stroke-width='2'
        stroke='currentColor'
        fill='none'
        stroke-linecap='round'
        stroke-linejoin='round'
        class='text-white'
      >
        <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
        <path d='M5 12l5 5l10 -10'></path>
      </svg>
    </div>
    {title}
  </dt>
  <dd class='mt-2 text-base leading-7 text-secondary-700'>
    {description}
  </dd>
</div>
