---
import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro'
import Slider from '@/components/Slider.astro'
interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    <meta name='description' content={description} />
    <meta
      name='keywords'
      content='aditivos, reciclaje, master color, monopigmentos'
    />
    <meta name='og:image' content='/logo.png' />
    <meta name='og:title' content='Ecotecplast, aditivos 100% activos.' />
    <meta name='og:description' content={description} />
    <meta name='og:url' content='https://ecotecplast.com' />
    <meta name='og:site_name' content='Ecotecplast' />
    <meta name='og:type' content='website' />
    <meta name='og:locale' content='es_ES' />
    <link rel='icon' type='image/png' href='/logo.png' />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <Navigation />
    </header>
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  @font-face {
    font-family: 'Monsterrat';
    src: url('/fonts/Monsterrat.ttf') format('truetype');
  }
  html {
    font-family: system-ui, sans-serif;
    background: #d5e5d7;
    scroll-behavior: smooth;
  }
</style>
